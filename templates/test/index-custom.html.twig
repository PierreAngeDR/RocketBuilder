<script>
    function createForm(deviceType, container, topics) {
        onNewForm(deviceType);

        let sortedTopics = sortTopics(topics, deviceType);

        sortedTopics.forEach((topic, i) => {
            const style = getBubbleStyle(deviceType, topics.length, i);
            const bubblejs = createBubble(style, topic.link, topic.target, topic.extended);
            createTooltip(deviceType, bubblejs, topic.label, topic.description, topic.extended);
            container.appendChild(bubblejs);
        });
    }

    function sortTopics(topics, deviceType) {
        switch (deviceType) {
            case 'mobile':
                return topics.sort((a, b) => a.orderMobile - b.orderMobile);
            case 'tablet':
                return topics.sort((a, b) => a.orderDesktop - b.orderDesktop);
            case 'desktop':
                return topics.sort((a, b) => a.orderDesktop - b.orderDesktop);
            default:
                return topics;
        }
    }

    function onNewForm(deviceType) {
        switch (deviceType) {
            case 'mobile':
                // === MOBILE MODE ===
                const centerBubble = document.querySelector('.center-bubblejs');
                if (centerBubble) centerBubble.style.display = 'none';
                break;
            case 'tablet':
                break;
            case 'desktop':
                break;
            default:
        }
    }

    function createBubble(style, link, target, extended) {
        const bubblejs = document.createElement('a');
        bubblejs.className = extended ? 'bubblejs bubblejs-extended' : 'bubblejs';
        bubblejs.href = link;
        bubblejs.target = target;
        for (const [key, value] of Object.entries(style)) {
            bubblejs.style[key] = value;
        }

        return bubblejs;
    }

    function createTooltip(deviceType, bubblejs, label, description, extended) {
        const style = getTooltipStyle(deviceType);

        bubblejs.innerHTML = `<div class="label">${label}</div>`;
        const tooltipjs = document.createElement('div');
        tooltipjs.className = 'tooltipjs';
        tooltipjs.innerHTML = description;
        for (const [key, value] of Object.entries(style)) {
            tooltipjs.style[key] = value;
        }
        bubblejs.appendChild(tooltipjs);
    }

    function getBubbleStyle(deviceType, nbTopics, i) {
        switch (deviceType) {
            case 'mobile':
                return getMobileBubbleStyle(nbTopics, i);
            case 'tablet':
                return getTabletBubbleStyle(nbTopics, i);
            case 'desktop':
                return getDesktopBubbleStyle(nbTopics, i);
            default:
                return {};
        }
    }

    function getMobileBubbleStyle(nbTopics, i) {
        return {
            display: 'flex',
            flexDirection: 'row',
            alignItems: 'flex-start',
            justifyContent: 'flex-start',
            position: 'relative',
            margin: '0 auto 16px',
            padding: '16px',
            transform: 'none',
            width: '100%',
            maxWidth: '100%',
            background: '#fff',
            border: '1px solid #ccc',
            borderRadius: '12px',
            boxShadow: '0 1px 4px rgba(0,0,0,0.08)',
            height: 'auto',
        };
    }

    function getTabletBubbleStyle(nbTopics, i) {
        return {};
    }

    function getDesktopBubbleStyle(nbTopics, i) {
        // === DESKTOP MODE ===
        const radius = 230;
        const angleOffset = -Math.PI / 2
        const angleStep = (2 * Math.PI) / nbTopics;
        const angle = i * angleStep;
        const x = radius * Math.cos(angle + angleOffset);
        const y = radius * Math.sin(angle + angleOffset);

        let style = {};
        style.left = `calc(50% + ${x}px)`;
        style.top = `calc(50% + ${y}px)`;
        style.position = 'absolute';
        style.transform = 'translate(-50%, -50%)';

        return style;
    }

    function getTooltipStyle(deviceType) {
        switch (deviceType) {
            case 'mobile':
                return getMobileTooltipStyle();
            case 'tablet':
                return getTabletTooltipStyle();
            case 'desktop':
                return getDesktopTooltipStyle();
            default:
                return {};
        }
    }

    function getMobileTooltipStyle() {
