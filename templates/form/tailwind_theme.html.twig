{# templates/form/tailwind_theme.html.twig #}
{% block form_row %}
    <div class="mb-4">
        {{ form_label(form, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
        {{ form_widget(form, {'attr': {'class': 'w-full p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
        {{ form_errors(form) }}
    </div>
{% endblock %}

{% block submit_widget %}
    <button type="submit" class="px-4 py-2 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700">
        {{ label|default('Valider') }}
    </button>
{% endblock %}

{% block checkbox_row %}
    <div class="mb-4 flex items-center space-x-2">
        {{ form_widget(form) }}
        {{ form_label(form, null, {'label_attr': {'class': 'text-sm font-medium text-gray-700'}}) }}
        {{ form_errors(form) }}
    </div>
{% endblock %}

{% block form_errors %}
    {% if errors|length > 0 %}
        <ul class="mt-1 text-sm text-red-600 space-y-1">
            {% for error in errors %}
                <li>{{ error.message }}</li>
            {% endfor %}
        </ul>
    {% endif %}
{% endblock %}